<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/login_bg">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_marginTop="@dimen/dp_65"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/login_logo"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"/>

    <TextView
        android:text="欢迎登录"
        android:layout_marginTop="@dimen/dp_12"
        android:textColor="@color/color_3B"
        android:textSize="@dimen/sp_25"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_37"
        android:layout_marginRight="@dimen/dp_37"
        android:background="@drawable/item_shape"
        android:layout_marginTop="@dimen/dp_57"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">

        <ImageView
            android:src="@mipmap/user"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/userName"
            android:textSize="@dimen/dp_16"
            android:background="@null"
            android:hint="用户名"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/dp_18"
            android:textColor="@color/color_9D999A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_37"
        android:layout_marginRight="@dimen/dp_37"
        android:background="@drawable/item_shape"
        android:layout_marginTop="@dimen/dp_40"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">

        <ImageView
            android:src="@mipmap/password"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/password"
            android:textSize="@dimen/dp_16"
            android:background="@null"
            android:hint="密码"
            android:password="true"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/dp_18"
            android:textColor="@color/color_9D999A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:layout_marginLeft="@dimen/dp_37"
        android:layout_marginRight="@dimen/dp_37"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/confirm_btn_shape"
        android:id="@+id/login_btn"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"
        android:text="登  录"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"/>
</LinearLayout>