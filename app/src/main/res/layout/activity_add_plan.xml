<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_F7">

    <include layout="@layout/titlebar"/>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <TextView
            android:text="所属单位："
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="right"
            android:id="@+id/company"
            android:layout_marginRight="@dimen/dp_15"
            android:hint="请选择所属单位"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/color_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <TextView
            android:text="单据编码："
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/bills"
            android:phoneNumber="true"
            android:gravity="right"
            android:layout_marginRight="@dimen/dp_15"
            android:hint="请输入单据编码"
            android:singleLine="true"
            android:background="@null"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/color_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <TextView
            android:text="单据状态："
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="right"
            android:id="@+id/state"
            android:layout_marginRight="@dimen/dp_15"
            android:hint="请选择单据状态"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/color_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <TextView
            android:text="项目名称："
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="right"
            android:id="@+id/project_name"
            android:layout_marginRight="@dimen/dp_15"
            android:hint="请选择项目名称"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/color_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <TextView
            android:text="项目编码："
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/item_coding"
            android:gravity="right"
            android:layout_marginRight="@dimen/dp_15"
            android:hint="请输入项目编码"
            android:singleLine="true"
            android:background="@null"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/color_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <TextView
            android:text="工程号："
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/job_number"
            android:gravity="right"
            android:layout_marginRight="@dimen/dp_15"
            android:hint="请输入工程号"
            android:singleLine="true"
            android:background="@null"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/color_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <TextView
            android:text="项目负责人："
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/principal"
            android:gravity="right"
            android:layout_marginRight="@dimen/dp_15"
            android:text="请选择项目负责人"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/color_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <TextView
            android:text="编制人："
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/bian"
            android:gravity="right"
            android:background="@null"
            android:singleLine="true"
            android:layout_marginRight="@dimen/dp_15"
            android:hint="请输入编制人"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/color_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <TextView
            android:text="编制时间："
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="right"
            android:id="@+id/start_time"
            android:layout_marginRight="@dimen/dp_15"
            android:text="选择编制时间"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/color_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <TextView
            android:text="备注："
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/remark"
            android:gravity="right"
            android:background="@null"
            android:singleLine="true"
            android:layout_marginRight="@dimen/dp_15"
            android:hint="请输入备注"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/color_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Space
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="提交"
        android:id="@+id/submit"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_85"
        android:background="@drawable/submit_shape"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"/>
</LinearLayout>