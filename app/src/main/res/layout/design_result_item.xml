<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear1"
    android:layout_marginLeft="@dimen/dp_2"
    android:layout_marginRight="@dimen/dp_2"
    android:background="@drawable/bord2"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fileName"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_3"
        android:text="文件名：JN06-CS-C12-JZ-ZT-2020.ZIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_3"
        android:text="上传人：设计A01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_3"
        android:text="创建人：设计A01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_3"
        android:text="上传时间：2021-07-12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_3"
        android:text="修改人：设计A01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_3"
        android:text="修改时间：2021-07-21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/see_the_model"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bord2"
        android:paddingLeft="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_2"
        android:paddingTop="@dimen/dp_2"
        android:paddingRight="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_9"
        android:layout_gravity="right"
        android:text="查看模型"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>