<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_F7">

    <include layout="@layout/titlebar"/>

    <ScrollView
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:text="工程号："
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Space
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:gravity="right"
                    android:layout_marginRight="@dimen/dp_15"
                    android:hint="请输入工程号"
                    android:singleLine="true"
                    android:background="@null"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/color_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:text="会审专业："
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Space
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/came_the_professional"
                    android:phoneNumber="true"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/dp_15"
                    android:hint="请输入会审专业"
                    android:singleLine="true"
                    android:background="@null"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/color_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:text="项目名称："
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Space
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="right"
                    android:id="@+id/project_name"
                    android:layout_marginRight="@dimen/dp_15"
                    android:hint="请选择项目名称"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/color_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:text="设计交底查询："
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Space
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/find"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="请选择交底查询"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/color_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:text="设计阶段："
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Space
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/design_stage"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/dp_15"
                    android:hint="请输入设计阶段"
                    android:singleLine="true"
                    android:background="@null"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/color_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:text="图册名称："
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Space
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/book_name"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="请选择项图册名称"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/color_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:text="接收单位："
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Space
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/company"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/dp_15"
                    android:hint="请选择接收单位"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/color_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:text="制单时间："
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Space
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="right"
                    android:id="@+id/start_time"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="选择制单日期"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/color_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:text="会审地点："
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Space
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/site"
                    android:gravity="right"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:hint="请输入会审地点"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/color_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:text="经办人："
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Space
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/jing_name"
                    android:gravity="right"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:hint="请输入经办人"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/color_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:text="接收人："
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Space
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/jie_name"
                    android:gravity="right"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:hint="请输入接收人"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/color_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:text="备注："
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Space
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/content"
                    android:gravity="right"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:hint="请输入备注"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/color_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:text="提交"
                android:id="@+id/submit"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dp_85"
                android:background="@drawable/submit_shape"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_38"/>

        </LinearLayout>

    </ScrollView>
<!--    <Space-->
<!--        android:layout_weight="1"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"/>-->



</LinearLayout>